<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dip"
    android:background="#373746"
    android:visibility="gone"
     >
    
     <LinearLayout
          android:id="@+id/llayout_seekbar"
          android:layout_alignParentTop="true"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
		  <SeekBar       
		        android:id="@+id/mediacontroller_seekbar"
		        style="@style/AppSeekBar"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal"
		        android:focusable="true"
		        android:max="1000" />
     </LinearLayout>
    
 	 <RelativeLayout
 	        android:layout_below="@id/llayout_seekbar"
       		android:layout_width="match_parent"
       		android:layout_height="wrap_content" 
       		android:gravity="center"
      		 >
         <LinearLayout
            android:id="@+id/llayoutMovieInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:layout_marginLeft="20sp"
            android:layout_centerVertical="true"
            >
              
		    <TextView
		        android:id="@+id/mediacontroller_file_name"
		        style="@style/MediaController_Text"
		        android:layout_width="135sp"
		        android:layout_height="wrap_content"
		        android:text="阿凡达2高清版"
		        />
		     <LinearLayout 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				>
				<TextView
		            android:id="@+id/mediacontroller_time_current"
		            style="@style/MediaController_Text"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="00:00:00"
		             />
                <TextView 
                   	style="@style/MediaController_Text"
                   	android:layout_width="wrap_content"
       	  			android:layout_height="wrap_content"
      		  		android:text="  /  "
                    />
		        <TextView
		            android:id="@+id/mediacontroller_time_total"
		            style="@style/MediaController_Text"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="53:22:00"
		            />
	         </LinearLayout>
        </LinearLayout>
            
        <LinearLayout 
         	 android:id="@+id/llayoutVolume"
   			 android:layout_width="wrap_content"
    		 android:layout_height="wrap_content"
    		 android:layout_alignParentRight="true"
    		 android:layout_centerVertical="true"
    		 android:layout_marginRight="20sp"
    		 >
		  <ImageView
		     android:layout_width="40dp"
		     android:layout_height="28dp"
		     android:contentDescription="@null"
		     />   
		  <ProgressBar 
		     android:layout_width="100dp"
		     android:layout_height="3dp"
		     android:layout_gravity="center_vertical"
		     android:layout_marginRight="0dp"
		     android:focusable="true"
		     android:id="@+id/volumeBar"
		     style="@style/VolumController_SeekBar"
		     />
	     </LinearLayout>
	     
        <LinearLayout
             android:id="@+id/mediacontroller_llayout"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:gravity="center"
	         android:layout_toLeftOf="@id/llayoutVolume"
	         android:layout_toRightOf="@id/llayoutMovieInfo"
	         android:focusable="true"
         	 >
		       <ImageButton
		           android:id="@+id/mediacontroller_previous"
		           style="@style/MediaController_Img"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_gravity="center"
		           android:nextFocusLeft="@+id/mediacontroller_previous"
		           android:nextFocusUp="@+id/mediacontroller_previous"
		           />
		
		       <ImageButton
		           android:id="@+id/mediacontroller_play_pause"
		           style="@style/MediaController_Img"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_gravity="center"
		           android:layout_marginLeft="42dp"
		           android:layout_marginRight="42dp"
		           />
		
		       <ImageButton
		           android:id="@+id/mediacontroller_next"
		           style="@style/MediaController_Img"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_gravity="center"
		           android:nextFocusRight="@+id/mediacontroller_next" 
		           android:nextFocusUp="@+id/mediacontroller_next"
		           />
        </LinearLayout>
        
  </RelativeLayout>
</RelativeLayout>