<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal" >

    <com.pisen.ott.launcher.widget.CommonScaleFocusView
        android:id="@+id/focusScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="22dp" >

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:columnCount="5"
            android:rowCount="3"
            android:scrollbars="horizontal"
            android:useDefaultMargins="true" >

            <com.pisen.ott.launcher.widget.RoundedTextView
                android:id="@+id/movie_item_r1c1"
                style="@style/MovieCommonStyle.ZoneText"
                android:background="@drawable/movie_zone_music"
                android:nextFocusUp="@id/movie_rb_zone"
                android:text="音乐"
                app:riv_corner_radius="@dimen/recommend_round_radius" />

            <com.pisen.ott.launcher.widget.RoundedTextView
                android:id="@+id/movie_item_r1c2"
                style="@style/MovieCommonStyle.ZoneText"
                android:background="@drawable/movie_zone_sport"
                android:nextFocusUp="@id/movie_rb_zone"
                android:text="体育"
                app:riv_corner_radius="@dimen/recommend_round_radius" />

            <com.pisen.ott.launcher.widget.RoundedTextView
                android:id="@+id/movie_item_r1c3"
                style="@style/MovieCommonStyle.ZoneText"
                android:background="@drawable/movie_zone_docmentary"
                android:nextFocusUp="@id/movie_rb_zone"
                android:text="纪录片"
                app:riv_corner_radius="@dimen/recommend_round_radius" />

            <com.pisen.ott.launcher.widget.RoundedTextView
                android:id="@+id/movie_item_r1c4"
                style="@style/MovieCommonStyle.ZoneText"
                android:background="@drawable/movie_zone_child"
                android:nextFocusUp="@id/movie_rb_zone"
                android:text="少儿"
                app:riv_corner_radius="@dimen/recommend_round_radius" />

            <com.pisen.ott.launcher.widget.RoundedTextView
                android:id="@+id/movie_item_r1c5"
                style="@style/MovieCommonStyle.ZoneText"
                android:background="@drawable/movie_zone_entertainment"
                android:nextFocusUp="@id/movie_rb_zone"
                android:text="娱乐"
                app:riv_corner_radius="@dimen/recommend_round_radius" />

            <com.pisen.ott.launcher.widget.RoundedTextView
                android:id="@+id/movie_item_r2c1"
                style="@style/MovieCommonStyle.ZoneText"
                android:background="@drawable/movie_zone_education"
                android:text="教育"
                app:riv_corner_radius="@dimen/recommend_round_radius" />

            <com.pisen.ott.launcher.widget.RoundedTextView
                android:id="@+id/movie_item_r2c2"
                style="@style/MovieCommonStyle.ZoneText"
                android:background="@drawable/movie_zone_fun"
                android:text="搞笑"
                app:riv_corner_radius="@dimen/recommend_round_radius" />

            <com.pisen.ott.launcher.widget.RoundedTextView
                android:id="@+id/movie_item_r2c3"
                style="@style/MovieCommonStyle.ZoneText"
                android:background="@drawable/movie_zone_live"
                android:text="生活"
                app:riv_corner_radius="@dimen/recommend_round_radius" />

            <com.pisen.ott.launcher.widget.RoundedTextView
                android:id="@+id/movie_item_r2c4"
                style="@style/MovieCommonStyle.ZoneText"
                android:background="@drawable/movie_zone_finance"
                android:text="财经"
                app:riv_corner_radius="@dimen/recommend_round_radius" />

            <com.pisen.ott.launcher.widget.RoundedTextView
                android:id="@+id/movie_item_r2c5"
                style="@style/MovieCommonStyle.ZoneText"
                android:background="@drawable/movie_zone_travel"
                android:text="旅游"
                app:riv_corner_radius="@dimen/recommend_round_radius" />

            <com.pisen.ott.launcher.widget.RoundedTextView
                android:id="@+id/movie_item_r3c1"
                style="@style/MovieCommonStyle.ZoneText"
                android:background="@drawable/movie_zone_car"
                android:text="汽车"
                app:riv_corner_radius="@dimen/recommend_round_radius" />

            <com.pisen.ott.launcher.widget.RoundedTextView
                android:id="@+id/movie_item_r3c2"
                style="@style/MovieCommonStyle.ZoneText"
                android:background="@drawable/movie_zone_militery"
                android:text="军事"
                app:riv_corner_radius="@dimen/recommend_round_radius" />

            <com.pisen.ott.launcher.widget.RoundedTextView
                android:id="@+id/movie_item_r3c3"
                style="@style/MovieCommonStyle.ZoneText"
                android:background="@drawable/movie_zone_science"
                android:text="时尚"
                app:riv_corner_radius="@dimen/recommend_round_radius" />

            <com.pisen.ott.launcher.widget.RoundedTextView
                android:id="@+id/movie_item_r3c4"
                style="@style/MovieCommonStyle.ZoneText"
                android:background="@drawable/movie_zone_health"
                android:text="资讯"
                app:riv_corner_radius="@dimen/recommend_round_radius" />

