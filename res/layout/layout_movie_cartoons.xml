<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal" >

    <com.pisen.ott.launcher.widget.CommonScaleFocusView
        android:id="@+id/focusScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="22dp"
        android:orientation="horizontal"
         >

        <!--  <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:padding="22dp" >-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.pisen.ott.launcher.widget.RoundedTextView
                    android:id="@+id/movie_tab_top"
                    style="@style/MovieCommonStyle.Text"
                    android:nextFocusUp="@id/movie_rb_cartoon"
                    app:riv_corner_radius="@dimen/recommend_round_radius"
                    android:background="@drawable/movie_common_hot_bg"
                    android:nextFocusDown="@+id/movie_tab_center"
                    android:text="全部" />

                <com.pisen.ott.launcher.widget.RoundedTextView
                    android:id="@+id/movie_tab_center"
                    style="@style/MovieCommonStyle.Text"
                    android:layout_marginTop="@dimen/movie_common_margin"
                    android:background="@drawable/movie_cartoon_china_bg"
                    app:riv_corner_radius="@dimen/recommend_round_radius"
                    android:text="国产精选" />

                <com.pisen.ott.launcher.widget.RoundedTextView
                    android:id="@+id/movie_tab_bottom"
                    style="@style/MovieCommonStyle.Text"
                    android:layout_marginTop="@dimen/movie_common_margin"
                    android:background="@drawable/movie_cartoon_western_bg"
                    app:riv_corner_radius="@dimen/recommend_round_radius"
                    android:text="日本动画" />
            </LinearLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:columnCount="3"
                android:rowCount="3"
                android:scrollbars="horizontal"
                android:useDefaultMargins="true" >

                <com.pisen.ott.launcher.widget.RoundedImageView
                    android:id="@+id/movie_item_r1c1"
                    app:riv_corner_radius="@dimen/recommend_round_radius"
                    android:nextFocusUp="@id/movie_rb_cartoon"
                    style="@style/MovieCommonStyle.Img" />

                <com.pisen.ott.launcher.widget.RoundedImageView
                    android:id="@+id/movie_item_r1c2"
                    android:nextFocusUp="@id/movie_rb_cartoon"
                    app:riv_corner_radius="@dimen/recommend_round_radius"
                    style="@style/MovieCommonStyle.Img" />

                <com.pisen.ott.launcher.widget.RoundedImageView
                    android:id="@+id/movie_item_r1c3"
                    android:nextFocusUp="@id/movie_rb_cartoon"
                    app:riv_corner_radius="@dimen/recommend_round_radius"
                    style="@style/MovieCommonStyle.Img" />

                <com.pisen.ott.launcher.widget.RoundedImageView
                    android:id="@+id/movie_item_r2c1"
                    app:riv_corner_radius="@dimen/recommend_round_radius"
                    style="@style/MovieCommonStyle.Img" />

                <com.pisen.ott.launcher.widget.RoundedImageView
                    android:id="@+id/movie_item_r2c2"
                    app:riv_corner_radius="@dimen/recommend_round_radius"
                    style="@style/MovieCommonStyle.Img" />

                <com.pisen.ott.launcher.widget.RoundedImageView
                    android:id="@+id/movie_item_r2c3"
                    app:riv_corner_radius="@dimen/recommend_round_radius"
                    style="@style/MovieCommonStyle.Img" />

                <com.pisen.ott.launcher.widget.RoundedImageView
                    android:id="@+id/movie_item_r3c1"
                    app:riv_corner_radius="@dimen/recommend_round_radius"
                    style="@style/MovieCommonStyle.Img" />

                <com.pisen.ott.launcher.widget.RoundedImageView
                    android:id="@+id/movie_item_r3c2"
                    app:riv_corner_radius="@dimen/recommend_round_radius"
                    style="@style/MovieCommonStyle.Img" />

                <com.pisen.ott.launcher.widget.RoundedImageView
                    android:id="@+id/movie_item_r3c3"
                    app:riv_corner_radius="@dimen/recommend_round_radius"
                    style="@style/MovieCommonStyle.Img" />
            </GridLayout>
        <!--  </LinearLayout>-->
    </com.pisen.ott.launcher.widget.CommonScaleFocusView>

</LinearLayout>