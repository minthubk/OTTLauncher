<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal" >

    <com.pisen.ott.launcher.widget.ScaleScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:padding="22dp" >

            <com.pisen.ott.launcher.widget.RoundedTextView
                android:id="@+id/movie_revommend_fram_history"
                style="@style/MovieImgRecommend.TextView"
                android:background="@drawable/movie_recommned_history_bg"
                android:gravity="bottom|right"
                app:riv_corner_radius="@dimen/recommend_round_radius"
                android:paddingBottom="20dp"
                android:paddingRight="20dp"
                android:nextFocusUp="@id/movie_rb_recommend"
                android:text="播放记录" />

            <com.pisen.ott.launcher.widget.RoundedTextView
                android:id="@+id/movie_revommend_fram_favorite"
                style="@style/MovieImgRecommend.TextView"
                android:layout_below="@id/movie_revommend_fram_history"
                android:layout_marginTop="@dimen/movie_common_margin"
                android:background="@drawable/movie_recommned_favorite_bg"
                android:gravity="bottom|right"
                app:riv_corner_radius="@dimen/recommend_round_radius"
                android:paddingBottom="20dp"
                android:paddingRight="20dp"
                android:text="追剧/收藏" />

            <com.pisen.ott.launcher.widget.RoundedTextView
                android:id="@+id/movie_revommend_fram_search"
                style="@style/MovieImgRecommend.TextView"
                android:layout_below="@id/movie_revommend_fram_favorite"
                android:layout_marginTop="@dimen/movie_common_margin"
                android:background="@drawable/movie_recommned_search_bg"
                android:gravity="bottom|right"
                app:riv_corner_radius="@dimen/recommend_round_radius"
                android:paddingBottom="20dp"
                android:paddingRight="20dp"
                android:text="搜索" />

            <com.pisen.ott.launcher.widget.RoundedImageView
                android:id="@+id/movie_recommend_item_biggest_1"
                style="@style/MovieImgRecommend.Biggest"
                app:riv_corner_radius="@dimen/recommend_round_radius"
                android:layout_marginLeft="@dimen/movie_common_margin"
                android:layout_toRightOf="@id/movie_revommend_fram_history"
                android:nextFocusUp="@id/movie_rb_recommend"
                android:nextFocusDown="@+id/movie_recommend_item1" />

            <com.pisen.ott.launcher.widget.RoundedImageView
                android:id="@+id/movie_recommend_item1"
                style="@style/MovieImgRecommend"
                app:riv_corner_radius="@dimen/recommend_round_radius"
                android:layout_marginTop="@dimen/movie_common_margin"
                android:layout_alignLeft="@id/movie_recommend_item_biggest_1"
                android:layout_below="@id/movie_recommend_item_biggest_1" />

            <com.pisen.ott.launcher.widget.RoundedImageView
                android:id="@+id/movie_recommend_item2"
                style="@style/MovieImgRecommend"
                app:riv_corner_radius="@dimen/recommend_round_radius"
                android:layout_marginLeft="@dimen/movie_common_margin"
                android:layout_alignTop="@id/movie_recommend_item1"
                android:layout_toRightOf="@id/movie_recommend_item1" />

            <com.pisen.ott.launcher.widget.RoundedImageView
                android:id="@+id/movie_recommend_item3"
                style="@style/MovieImgRecommend"
                android:nextFocusUp="@id/movie_rb_recommend"
                app:riv_corner_radius="@dimen/recommend_round_radius"
                android:layout_marginLeft="@dimen/movie_common_margin"
                android:layout_toRightOf="@id/movie_recommend_item_biggest_1" />

            <com.pisen.ott.launcher.widget.RoundedImageView
                android:id="@+id/movie_recommend_item_middle_1"
                style="@style/MovieImgRecommend.Midlle"
                app:riv_corner_radius="@dimen/recommend_round_radius"
                android:layout_marginTop="@dimen/movie_common_margin"
                android:layout_alignLeft="@id/movie_recommend_item3"
                android:layout_below="@id/movie_recommend_item3" />

            <com.pisen.ott.launcher.widget.RoundedImageView
                android:id="@+id/movie_recommend_item_biggest_2"
                style="@style/MovieImgRecommend.Biggest"
                android:nextFocusUp="@id/movie_rb_recommend"
                app:riv_corner_radius="@dimen/recommend_round_radius"
                android:layout_marginLeft="@dimen/movie_common_margin"
                android:layout_toRightOf="@id/movie_recommend_item3" />

            <com.pisen.ott.launcher.widget.RoundedImageView
                android:id="@+id/movie_recommend_item4"
                style="@style/MovieImgRecommend"
                app:riv_corner_radius="@dimen/recommend_round_radius"
                android:layout_marginTop="@dimen/movie_common_margin"
                android:layout_alignLeft="@id/movie_recommend_item_biggest_2"
                android:layout_below="@id/movie_recommend_item_biggest_2" />

            <com.pisen.ott.launcher.widget.RoundedImageView
                android:id="@+id/movie_recommend_item5"
                style="@style/MovieImgRecommend"
                app:riv_corner_radius="@dimen/recommend_round_radius"
                android:layout_alignTop="@id/movie_recommend_item4"
                android:layout_marginLeft="@dimen/movie_common_margin"
                android:layout_toRightOf="@id/movie_recommend_item4" />

            <com.pisen.ott.launcher.widget.RoundedImageView
                android:id="@+id/movie_recommend_item6"
                style="@style/MovieImgRecommend"
                android:nextFocusUp="@id/movie_rb_recommend"
                app:riv_corner_radius="@dimen/recommend_round_radius"
                android:layout_marginLeft="@dimen/movie_common_margin"
                android:layout_toRightOf="@id/movie_recommend_item_biggest_2" />

            <com.pisen.ott.launcher.widget.RoundedImageView
                android:id="@+id/movie_recommend_item_middle_2"
                style="@style/MovieImgRecommend.Midlle"
                app:riv_corner_radius="@dimen/recommend_round_radius"
                android:layout_marginTop="@dimen/movie_common_margin"
                android:layout_alignLeft="@id/movie_recommend_item6"
                android:layout_below="@id/movie_recommend_item6" />

            <com.pisen.ott.launcher.widget.RoundedImageView
                android:id="@+id/movie_recommend_item_middle_3"
                style="@style/MovieImgRecommend.Midlle"
                android:nextFocusUp="@id/movie_rb_recommend"
                app:riv_corner_radius="@dimen/recommend_round_radius"
                android:layout_marginLeft="@dimen/movie_common_margin"
                android:layout_toRightOf="@id/movie_recommend_item6" />

            <com.pisen.ott.launcher.widget.RoundedImageView
                android:id="@+id/movie_recommend_item7"
                style="@style/MovieImgRecommend"
                app:riv_corner_radius="@dimen/recommend_round_radius"
                android:layout_marginTop="@dimen/movie_common_margin"
                android:layout_alignLeft="@id/movie_recommend_item_middle_3"
                android:layout_below="@id/movie_recommend_item_middle_3" />
        </RelativeLayout>
    </com.pisen.ott.launcher.widget.ScaleScrollView>

</FrameLayout>